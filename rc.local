#!/bin/bash
raspi-config nonint do_wifi_country GB
ifconfig wlan0 up

sysctl -w net.ipv4.ip_forward=1

nmcli device set usb0 managed yes

sudo nmcli con delete usb0-share
sudo nmcli con add type ethernet ifname usb0 con-name usb0-share ip4 192.168.8.1/24
sudo nmcli con mod usb0-share ipv4.method shared
sudo nmcli con up usb0-share
